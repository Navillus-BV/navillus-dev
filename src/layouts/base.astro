---
import site from '../data/site.json';
import Footer from '../components/Footer.astro';
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.svelte';

interface Props {
	title: string;
	description: string;
	image: string;
	pathname?: string;
	canonicalURL: string;
}

const {
	title = site.title,
	description = site.description,
	image = site.image,
	pathname,
	canonicalURL
}: Props = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<MainHead title={title} description={description} image={image} canonicalURL={canonicalURL} />

		<script>
			const storedDark = JSON.parse(localStorage.getItem("navillus:darktheme"));

			const prefersDark =
				window &&
				window.matchMedia &&
				window.matchMedia("(prefers-color-scheme: dark)").matches;

			const dark = typeof storedDark === "boolean" ? storedDark : prefersDark;

			document.documentElement.setAttribute(
				"data-chisel-theme",
				dark ? "dark" : "light"
			);
		</script>
	</head>

	<body>
		<Nav client:idle pathname={pathname} />

        <main>
			<slot />
        </main>

		<Footer />
	</body>
</html>

<style lang="scss">
	body {
		font-family: Poppins, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
			'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
			'Segoe UI Symbol', 'Noto Color Emoji';
		font-size: var(--text-base);
		line-height: 1.75;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1 0 0;
		margin-top: 0;
	}
</style>