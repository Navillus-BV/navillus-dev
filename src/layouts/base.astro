---
import site from '../data/site.json';
import Footer from '../components/Footer.astro';
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.svelte';

export let title = site.title;
export let description = site.description;
export let image = site.social.image;
export let pathname: string | undefined;
export let canonicalURL: string;
---

<!doctype html>
<html lang="en">
	<head>
		<MainHead title={title} description={description} image={image} canonicalURL={canonicalURL} />
	</head>

	<body>
		<Nav:idle pathname={pathname} />

        <main>
			<slot />
        </main>

		<Footer />
	</body>
</html>

<style lang="scss">
	body {
		font-family: Poppins, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
			'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
			'Segoe UI Symbol', 'Noto Color Emoji';
		font-size: var(--text-base);
		line-height: 1.75;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1 0 0;
		margin-top: 0;
	}
</style>