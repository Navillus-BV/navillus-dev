---
import type { FeaturesBlock } from "../../content/config";
import FeaturesBlockItem from "./FeaturesBlockItem.astro";
import UIBlock from "./UIBlock.astro";

const block = Astro.props as FeaturesBlock;
const { items = [] } = block;
---

<UIBlock {...block}>
  <div class="features">
    {items.map((item) => <FeaturesBlockItem {...item} />)}
  </div>
</UIBlock>
