---
import type { BadgeBlock } from "../../content/config";
import BadgesBlockGroup from "./BadgesBlockGroup.astro";
import UIBlock from "./UIBlock.astro";

const block = Astro.props as BadgeBlock;
const { groups } = block;
---

<UIBlock {...block}>
  {groups.map((group) => <BadgesBlockGroup {...group} />)}
</UIBlock>
