---
import Icon from '../Icon.astro'

const { title, items } = Astro.props as CMS.BadgesBlockGroup
---

<div>
  <h4 class="h6"><strong>{title}</strong></h4>

  <ul>
    {items.map(({ icon, description }) => (
      <li>
        <Icon id={icon} title={description} />
      </li>
    ))}
  </ul>
</div>

<style lang="scss">
  div {
    &:not(:first-of-type) {
      margin-top: var(--spacer-md);
    }

    & ul {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(10rem, 1fr));
      gap: var(--spacer-sm);
    }

    & li {
      background: var(--chisel-neutral-50);
      width: 100%;
      padding: var(--spacer-xs) var(--spacer-sm);
      display: flex;
      justify-content: center;
      border-radius: 0.25rem;
      box-shadow: var(--shadow-sm);
    }

    & :global(svg) {
      height: 1.75rem;
      max-width: var(--spacer-xl);
    }
  }
</style>
