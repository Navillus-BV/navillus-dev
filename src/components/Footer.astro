---
import navigation from '../data/navigation.json'

const { legal, social } = navigation as CMS.Navigation

const year = new Date().getFullYear()
---

<footer>
  <div class="container">
    <ul class="social">
      {social.map(({ href, title, icon }) => (
        <li>
          <a href={href} rel="me">
            <span class="sr-only">{title}</span>
            <svg>
              <use xlink:href={`/assets/sprites.svg#${icon}`} />
            </svg>
          </a>
        </li>
      ))}
    </ul>

    <ul class="links">
      {legal.map(({ title, href }) => (
        <li>
          <a class="h6" href={href}>
            {title}
          </a>
        </li>
      ))}
    </ul>

    <div class="legal">
      <div>Â© {year} Navillus B.V.</div>

      <small>
        Icons made by
        <a href="https://www.freepik.com" class="underline" title="Freepik"
          >Freepik</a
        >
        from
        <a href="https://www.flaticon.com/" class="underline" title="Flaticon">
          www.flaticon.com
        </a>
      </small>
    </div>
  </div>
</footer>

<style lang="scss">
  footer {
    background: var(--chisel-neutral-50);
  }

  a {
    color: var(--chisel-neutral-900);
  }

  .container {
    padding-top: var(--spacer-lg);
    padding-bottom: var(--spacer-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacer-md);
  }

  .social {
    display: flex;
    flex-direction: row;
    gap: var(--spacer-sm);

    & svg {
      height: var(--chisel-h1);
      width: var(--chisel-h1);
      overflow: visible;
    }
  }

  .links {
    display: flex;
    flex-direction: row;

    & a {
      text-decoration: underline;
      padding: 0 var(--spacer-xs);

      @media (min-width: 480px) {
        & {
          padding: 0 var(--spacer-sm);
          font-size: var(--chisel-p);
        }
      }
    }

    & li {
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;

      &:not(:last-of-type) {
        border-right: 1px solid currentColor;
      }
    }
  }

  .legal {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
