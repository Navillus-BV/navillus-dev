---
const { src = "/img/avatar.svg", alt = "", small = false }: Props = Astro.props;
---

<img src={src} width="48" height="48" alt={alt} loading="lazy" class={small ? "small" : ""}>

<style>
    img {
        height: 48px;
        width: 48px;
        border-radius: 50%;
        object-fit: cover;
        filter: var(--shadow-md);
    }

    img.small {
        height: 24px;
        width: 24px;
    }
</style>